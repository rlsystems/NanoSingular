@page
@model NanoSingular.RazorApi.Pages.Profile._PasswordModel
@{
}



<!-- Panel (Password) -->
<div class="panel tab-panel" id="password">
    <!-- Form Block -->
    <form class="form-block" asp-action="Password">
        <div class="form-block__title">
            Change your password
        </div>


        <div class="form-block__fields ">

            <!-- Field Group -->
            <div class="field-group">
                <div class="field-group__title">
                    Current Password
                </div>
                <div class="field-group__input-area">
                    <input type="text" placeholder="Current Password">
                </div>
            </div>

            <!-- Field Group -->
            <div class="field-group">
                <div class="field-group__title">
                    New Password
                </div>
                <div class="field-group__input-area">
                    <input type="text" placeholder="New Password">
                </div>
            </div>

            <!-- Field Group -->
            <div class="field-group">
                <div class="field-group__title">
                    Confirm New Password
                </div>
                <div class="field-group__input-area">
                    <input type="text" placeholder="Confirm New Password">
                </div>
            </div>

        </div>
        <div class="form-block__cta">
            <button class="btn small" type="submit">Save Changes</button>
        </div>
    </form>
</div>